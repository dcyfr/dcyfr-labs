{
  "extends": "markdownlint/style/prettier",
  "default": true,
  "MD003": {
    "style": "atx"
  },
  "MD004": {
    "style": "dash"
  },
  "MD013": {
    "line_length": 120,
    "code_blocks": false,
    "tables": false,
    "heading_line_length": 120
  },
  "MD024": {
    "siblings_only": true
  },
  "MD025": true,
  "MD026": {
    "punctuation": ".,;:!"
  },
  "MD033": {
    "allowed_elements": [
      "details",
      "summary",
      "available_skills",
      "skill",
      "name",
      "description",
      "location",
      "usage",
      "skills_system",
      "br",
      "sub",
      "sup",
      "kbd",
      "mark",
      "abbr",
      "dfn"
    ]
  },
  "MD034": true,
  "MD041": true,
  "no-hard-tabs": true,
  "whitespace": true
}
