{
  // ============================================
  // OPENCODE.AI GLOBAL CONFIGURATION TEMPLATE
  // ============================================
  // Location: ~/.config/opencode/opencode.jsonc
  //
  // Global config applies to ALL projects on your machine
  // Project-specific config (opencode.jsonc) overrides global settings
  //
  // To use:
  // 1. Copy this file to ~/.config/opencode/opencode.jsonc
  // 2. Customize for your team preferences
  // 3. Commit team-wide .opencode/ directory for shared defaults
  //
  // Precedence (lowest to highest):
  // 1. Remote config (.well-known/opencode) - org defaults
  // 2. Global config (~/.config/opencode/opencode.jsonc) - your defaults ‚Üê THIS FILE
  // 3. Custom config (OPENCODE_CONFIG env var) - overrides
  // 4. Project config (opencode.jsonc) - project-specific
  // 5. Inline config (OPENCODE_CONFIG_CONTENT env var) - runtime

  "$schema": "https://opencode.ai/config.json",

  // ============================================
  // DEFAULT PROVIDER & MODEL (PERSONAL PREFERENCE)
  // ============================================

  // Your preferred default model across all projects
  "model": "anthropic/claude-sonnet-4-5",

  // Smaller model for quick tasks
  "small_model": "anthropic/claude-haiku-4-5",

  // ============================================
  // THEME & INTERFACE PREFERENCES
  // ============================================

  // Terminal UI theme
  "theme": "opencode",

  // TUI customization (scroll speed, acceleration, diff display)
  "tui": {
    "scroll_speed": 3,
    "scroll_acceleration": {
      "enabled": true,
    },
    "diff_style": "auto",
  },

  // Custom keybinds (optional)
  "keybinds": {
    "submit": "enter",
    "toggleExpanded": "space",
    "moveUp": "up",
    "moveDown": "down",
  },

  // ============================================
  // CONTEXT & TOKEN MANAGEMENT
  // ============================================

  // Auto-compact context when full
  "compaction": {
    "auto": true,
    "prune": true,
    "pruneThreshold": 0.8,
  },

  // ============================================
  // SHARING & COLLABORATION
  // ============================================

  // Default share mode: "manual" | "auto" | "disabled"
  "share": "manual",

  // ============================================
  // AUTO-UPDATE
  // ============================================

  // Auto-update OpenCode when new versions available
  // Set to "notify" to be notified but not auto-update
  "autoupdate": true,

  // ============================================
  // PROJECT STRUCTURE DEFAULTS
  // ============================================

  // File watcher ignore patterns (global defaults)
  // Project config can extend these
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      ".next/**",
      ".vercel/**",
      "reports/**",
      "coverage/**",
      "public/**",
    ],
  },

  // Default formatters (global preference)
  "formatter": {
    "prettier": {
      "disabled": false,
    },
    "eslint": {
      "disabled": false,
    },
  },

  // ============================================
  // PROVIDER PREFERENCES
  // ============================================

  // Disabled providers (prevent accidental use)
  "disabled_providers": ["groq", "ollama"],

  // ============================================
  // TROUBLESHOOTING: RATE LIMITS & COST
  // ============================================

  // Provider-specific settings
  "provider": {
    "anthropic": {
      "options": {
        // Cache API responses for cost reduction
        "setCacheKey": true,
        // Increase timeout if rate-limited
        "timeout": 600000,
      },
    },
  },
}
