{
  // Package Manager - Force npm (disable yarn completely)
  "npm.packageManager": "npm",
  "npm.autoDetect": "on",
  "npm.scriptExplorerAction": "run",
  "task.autoDetect": "off",
  "npm.exclude": "",
  "task.allowAutomaticTasks": "off",

  // Testing
  "vitest.enable": true,
  "vitest.commandLine": "npm run test --",
  "playwright.reuseBrowser": true,
  "testing.automaticallyOpenPeekView": "failureInVisibleDocument",
  "recommendations": [
    "vitest.explorer",
    "ms-playwright.playwright",
    "usernamehw.errorlens"
  ],

  // GitHub Copilot Chat - enable custom agents in subagents
  "chat.customAgentInSubagent.enabled": true,
  "chat.agentSessionsViewLocation": "view",
  "github.copilot.chat.mcp.enabled": true,

  // GitHub Copilot - optimized for token efficiency
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": false
  },
  "chat.agent.enabled": true,

  // Editor settings for AI assistance
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "codeQL.createQuery.qlPackLocation": "/Users/drew/Desktop/dcyfr/code/dcyfr-labs",

  // IDE Performance Optimizations
  "typescript.preferences.includePackageJsonAutoImports": "off",
  "typescript.suggest.autoImports": true,
  "typescript.preferences.fastIntelliSense": true,
  "typescript.disableAutomaticTypeAcquisition": true,
  "emmet.triggerExpansionOnTab": false,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/coverage/**": true
  },

  // Development Experience
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Tailwind CSS - Known acceptable warnings for v1 production
  // These are false positives from Tailwind CSS IntelliSense extension not yet supporting v4
  "tailwindCSS.lint.cssConflict": "ignore",
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "tailwindCSS.validate": true,
  "github-actions.workflows.pinned.workflows": [],
  "githubPullRequests.pullRequestDescription": "template"
}
