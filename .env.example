# DCYFR dcyfr-labs Environment — Example
# Copy this file to .env and replace 1Password Vault/Item names with your own.
# Install 1Password CLI: bash scripts/setup-1password.sh
# Format: op://<Vault>/<Item>/<Field>

# ─── Secrets (1Password References) ────────────────────────────────────────
INDEXNOW_API_KEY="op://<YourVault>/IndexNow/api_key"
ADMIN_API_KEY="op://<YourVault>/Admin API Key/credential"
SESSION_ENCRYPTION_KEY="op://<YourVault>/Session Encryption/key"
CRON_SECRET="op://<YourVault>/Cron Secret/credential"
UPSTASH_REDIS_REST_TOKEN="op://<YourVault>/Upstash Redis/rest_token"
UPSTASH_REDIS_REST_TOKEN_PREVIEW="op://<YourVault>/Upstash Redis/rest_token_preview"
VERCEL_TOKEN="op://<YourVault>/Vercel/token"
VERCEL_AUTOMATION_BYPASS_SECRET="op://<YourVault>/Vercel/automation_bypass_secret"
INNGEST_EVENT_KEY="op://<YourVault>/Inngest/event_key"
INNGEST_SIGNING_KEY="op://<YourVault>/Inngest/signing_key"
SENTRY_AUTH_TOKEN="op://<YourVault>/Sentry/auth_token"
PERPLEXITY_API_KEY="op://<YourVault>/Perplexity/api_key"
LANGUAGETOOL_API_KEY="op://<YourVault>/LanguageTool/api_key"
GITHUB_TOKEN="op://<YourVault>/GitHub PAT/credential"
GITHUB_WEBHOOK_SECRET="op://<YourVault>/GitHub Webhook/secret"
# ─── Automated Repository Showcase ──────────────────────────────────────────
# GITHUB_TOKEN above is reused for fetching public repo data (higher rate limits)
# Set to "false" to disable automated GitHub repo fetching on the /work page
ENABLE_AUTOMATED_REPOS="true"
RESEND_API_KEY="op://<YourVault>/Resend/api_key"
PROMPTINTEL_API_KEY="op://<YourVault>/PromptIntel/api_key"
GREYNOISE_API_KEY="op://<YourVault>/GreyNoise/api_key"
INOREADER_CLIENT_SECRET="op://<YourVault>/Inoreader/client_secret"
GOOGLE_INDEXING_API_KEY="op://<YourVault>/Google Indexing API/api_key"

# ─── Configuration ─────────────────────────────────────────────────────────
NODE_ENV=
NEXT_TELEMETRY_DISABLED=
WATCHPACK_POLLING=
NEXT_PUBLIC_SITE_URL=
NEXT_PUBLIC_FROM_EMAIL=
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_URL_PREVIEW=
VERCEL_ANALYTICS_ENDPOINT=
INNGEST_ENV=
INNGEST_ERROR_ALERTS_EMAIL=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_DSN=
SENTRY_MCP_ENDPOINT=
LANGUAGETOOL_USERNAME=
NEXT_PUBLIC_GISCUS_REPO=
NEXT_PUBLIC_GISCUS_REPO_ID=
NEXT_PUBLIC_GISCUS_CATEGORY=
NEXT_PUBLIC_GISCUS_CATEGORY_ID=
RESEND_FROM_EMAIL=
NEXT_PUBLIC_INOREADER_CLIENT_ID=
INOREADER_CLIENT_ID=
INOREADER_REDIRECT_URI=

# ─── Axiom Monitoring ────────────────────────────────────────────────────────
# Provisioned via: 1Password > Development > "Axiom API Token"
# Dashboard: https://app.axiom.co
AXIOM_TOKEN="op://Development/Axiom API Token/credential"
# Dataset names (create in Axiom dashboard before using)
AXIOM_DATASET_LABS="dcyfr-labs"
AXIOM_DATASET_AGENTS="dcyfr-agents"

# ─── Automated Repository Showcase ──────────────────────────────────────────
# Pulls live GitHub repo data at build time and merges it onto the /work page.
# Docs: dcyfr-labs/docs/guides/AUTOMATED_REPO_SHOWCASE.md

# Optional PAT — without this the GitHub API is limited to 60 req/hour.
# Requires no scopes for public repos; add `public_repo` if you need private ones.
# Provisioned via: 1Password > Development > "GitHub Token (dcyfr-labs)"
GITHUB_TOKEN=

# Master switch for the automated showcase feature (default: true).
# Set to "false" to skip all GitHub API calls and use only static project data.
# ENABLE_AUTOMATED_REPOS=false
