{
  "description": "Performance budgets for cyberdrew.dev - Core Web Vitals targets and bundle size limits",
  "budgets": {
    "webVitals": {
      "LCP": {
        "target": 2500,
        "warning": 3000,
        "error": 4000,
        "description": "Largest Contentful Paint - Main content should load within 2.5s"
      },
      "INP": {
        "target": 200,
        "warning": 300,
        "error": 500,
        "description": "Interaction to Next Paint - User interactions should respond within 200ms"
      },
      "CLS": {
        "target": 0.1,
        "warning": 0.15,
        "error": 0.25,
        "description": "Cumulative Layout Shift - Minimal visual instability"
      },
      "FCP": {
        "target": 1800,
        "warning": 2400,
        "error": 3000,
        "description": "First Contentful Paint - Initial render within 1.8s"
      },
      "TTFB": {
        "target": 800,
        "warning": 1200,
        "error": 1800,
        "description": "Time to First Byte - Server response within 800ms"
      }
    },
    "bundles": {
      "firstLoadJS": {
        "target": 150,
        "warning": 200,
        "error": 250,
        "unit": "kB",
        "description": "Total JavaScript for initial page load"
      },
      "mainBundle": {
        "target": 100,
        "warning": 130,
        "error": 170,
        "unit": "kB",
        "description": "Main application bundle size"
      },
      "pageBundle": {
        "target": 50,
        "warning": 70,
        "error": 100,
        "unit": "kB",
        "description": "Individual page bundle size"
      }
    },
    "assets": {
      "images": {
        "target": 200,
        "warning": 300,
        "error": 500,
        "unit": "kB",
        "description": "Maximum image size (before optimization)"
      },
      "fonts": {
        "target": 100,
        "warning": 150,
        "error": 200,
        "unit": "kB",
        "description": "Total font file sizes"
      }
    }
  },
  "monitoring": {
    "sampleRate": 1.0,
    "enabledEnvironments": ["production", "preview"],
    "alertThresholds": {
      "consecutiveFailures": 3,
      "percentileThreshold": 75,
      "description": "Alert when 75th percentile exceeds error threshold for 3 consecutive measurements"
    }
  },
  "notes": {
    "lastReviewed": "2025-11-19",
    "reviewFrequency": "Monthly",
    "adjustmentCriteria": [
      "Performance trends over 30 days",
      "User feedback and complaints",
      "Lighthouse CI scores",
      "Vercel Analytics data"
    ]
  }
}
