  /* Decelerate */
  --ease-bounce: cubic-bezier(0.34, 1.56, 0.64, 1);
  /* Slight overshoot */

  /* Transform Distances (for consistency) */
  --slide-distance: 12px;
  --lift-distance: 2px;
